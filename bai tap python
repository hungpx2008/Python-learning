#Xử lý chuỗi nâng cao
#Đếm số từ
cau = input("Câu Bất kỳ:")
print(cau)
def dem_so_tu(cau):
    so_tu = len(cau.split())
    return so_tu
so_tu = dem_so_tu(cau)
print(f"Câu {cau} có tổng {so_tu}")
